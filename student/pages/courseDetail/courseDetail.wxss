/* student/pages/course-detail/courseDetail.wxss */
@import "/app.wxss";

.course_title_card {
  width:100%;
  height:30vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.course_title {
  background: #fff;
  border-radius: 5px;
  font-size: 17pt;
  padding: 20rpx;
}

.course_info {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  font-size: 13pt;
}

.course_info_item {
  border-bottom: 1px solid #ccc;
  padding: 20rpx 0; 
}

.info_item_val {
  float: right;
  color: #b2b2b2;
}

.course_btn {
  margin-top: 40rpx;
  width: 95vw;
}