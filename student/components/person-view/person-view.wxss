/* student/components/person-view/person-view.wxss */
@import "/app.wxss";

.pageTop{
  width:100%;
  height:30vh;
}

.userinfo {
  display: flex;
  flex-direction: column;  
  align-items: center;
  /* margin-top: 50rpx; */
  justify-content: center; 
  height: 100%;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: whitesmoke;
}

.info-detail {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
}

.info-detail-item {
  border-bottom: 1px solid #ccc;
  font-size: 13pt;
  padding: 20rpx 0;
}

.info-detail-item-content {
  float: right;
  color: #b2b2b2;
}