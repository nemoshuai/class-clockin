<!--teacher/pages/createCourse/createCourse.wxml-->
<view>
  <form class="page-form" catchsubmit="formSubmit" catchreset="formReset">
    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input 
              class="weui-input" 
              name="course_name" 
              value='{{form.course_name}}' 
              placeholder="请输入课程名称" 
            />
          </view>
        </view>
      </view>
    </view>

    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input 
            class="weui-input" 
            name="address" 
            value='{{form.address}}' 
            placeholder="请输入上课地点" 
            />
          </view>
        </view>
      </view>
    </view>

    <view class="page-section">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input 
            class="weui-input" 
            name="class_time" 
            value='{{form.class_time}}' 
            placeholder="请输入上课时间" 
            />
          </view>
        </view>
      </view>
    </view>

    <view class="btn-area">
      <button type="primary" formType="submit">确定</button>
      <button formType="reset">重置</button>
    </view>
  </form>
</view>
