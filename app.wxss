/**app.wxss**/
@import "/weui.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 背景颜色 */
.bg-theme-color { background-color: #00C853; }

/* 字体样式 */
.font-14 { font-size: 14pt; }
.font-13 { font-size: 13pt; }

/**字体颜色**/
.theme-color { color: #00C853; }
.c-black { color: #111111; }
.c-7b { color: #0a0707; }
.c-999 { color: #999; }
.c-4e { color: #4e4e4e; }
.c-red { color: red; }
.c-e3 { color:#e3e3e3; }
.c-fff { color: #fff; }
.text-over { 
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}